
generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


model Pesquisadores {

  id_Pesquisador        Int      @id @default(autoincrement())
  email   String   @unique
  name    String @db.VarChar(60)
  cpf String @unique @db.VarChar(14)
  senha String @db.VarChar(60)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  Roles Role @relation(fields: [roleId], references: [id])
  roleId Int  
}

model Role {
  id        Int      @id @default(autoincrement())
  Role      String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  role Pesquisadores[]
}


model Candidato {
   id_candidato Int @id @default(autoincrement())
   name    String @db.VarChar(60) 
   apelido String? @db.VarChar(60) 
   Partido String?
   images Images[] 

   
    votos Votos[]
}


model Images {
  id Int  @id @default(autoincrement())
  Url String 
  perfil Candidato @relation(fields: [FotoId], references: [id_candidato])
  FotoId Int
}


model Votos {
  id_voto Int @id @default(autoincrement())
  nome String @db.VarChar(60)
  Idade Int 
  Localidade String @db.VarChar(60)
  Votar Boolean
  candidato   Candidato @relation(fields: [candidatoId], references: [id_candidato])
  candidatoId Int
}

